all: work build sim

tarball: clean_up tar

work:
	vlib work

build:
	vlog bus_if.sv bidirect_bus_pkg.sv bidirect_bus_driver_bfm.sv top.sv
	vopt hdl_top hvl_top -o opt

sim:
	vsim -c -do "run -all" opt

clean_up:
	rm -rf work transcript *~ vsim.wlf *.log *.tgz
	
tar:
	@(cd .. ;\
	tar -zcf wait_for_signal/uvm_wait_for_signal.tgz \
	wait_for_signal/bus_if.sv wait_for_signal/bidirect_bus_pkg.sv wait_for_signal/bidirect_bus_driver_bfm.sv \
	wait_for_signal/top.sv \
	wait_for_signal/Makefile \
	wait_for_signal/README.txt; \
	cd wait_for_signal)
	
